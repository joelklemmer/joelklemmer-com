{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web",
  "projectType": "application",
  "tags": ["scope:web", "type:app"],
  "// targets": "to see all targets run: nx show project web --web",
  "targets": {
    "a11y": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run web-e2e:a11y"
      }
    },
    "content-validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx --tsconfig tsconfig.base.json tools/validate-content.ts"
      }
    },
    "i18n-validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx --tsconfig tsconfig.base.json tools/validate-i18n.ts"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -e \"console.log('No web tests configured')\""
      }
    },
    "verify": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run web:lint",
          "nx run web:content-validate",
          "nx run web:i18n-validate",
          "nx run web:test",
          "nx run web:build",
          "nx run web:a11y"
        ],
        "parallel": false
      }
    }
  }
}
