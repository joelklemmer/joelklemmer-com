{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/web/*"],
      "@ui": ["libs/ui/src/index.ts"],
      "@ui/*": ["libs/ui/src/*"],
      "@tokens": ["libs/tokens/src/index.ts"],
      "@tokens/*": ["libs/tokens/src/*"],
      "@i18n": ["libs/i18n/src/index.ts"],
      "@i18n/*": ["libs/i18n/src/*"],
      "@content": ["libs/content/src/index.ts"],
      "@content/*": ["libs/content/src/*"],
      "@seo": ["libs/seo/src/index.ts"],
      "@seo/*": ["libs/seo/src/*"],
      "@a11y": ["libs/a11y/src/index.ts"],
      "@a11y/*": ["libs/a11y/src/*"],
      "@screens": ["libs/screens/src/index.ts"],
      "@screens/*": ["libs/screens/src/*"],
      "@sections": ["libs/sections/src/index.ts"],
      "@sections/*": ["libs/sections/src/*"],
      "@joelklemmer-com/tokens": ["libs/tokens/src/index.ts"],
      "@joelklemmer-com/i18n": ["libs/i18n/src/index.ts"],
      "@joelklemmer-com/content": ["libs/content/src/index.ts"],
      "@joelklemmer-com/seo": ["libs/seo/src/index.ts"],
      "@joelklemmer-com/a11y": ["libs/a11y/src/index.ts"],
      "@joelklemmer-com/ui": ["libs/ui/src/index.ts"],
      "@joelklemmer-com/screens": ["libs/screens/src/index.ts"],
      "@joelklemmer-com/sections": ["libs/sections/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
